@model MisMinistritosUNED.Models.TourModel

@{
    ViewData["Title"] = "Detalles del Tour";
}
<p style="color:darkorange" ;>@TempData["touractualizado"]</p>


<script language="javascript" type="text/javascript">
    function StopBack() {
        window.history.forward(1);
    }
</script>
<h1>Detalles del Tour</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="control-label">Id</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Descripción</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descripcion)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Imagen</label>
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/jpg;base64,@Model.verImagen" width="100px" height="100px" />
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Días de la semana</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.diasTour)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Proveedor</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.proveedor)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Precio del Tour</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precioTour)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="List">Volver a la lista</a>
</div>