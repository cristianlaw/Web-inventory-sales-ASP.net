@model MisMinistritosUNED.Models.ProveedorModel

@{
    ViewData["Title"] = "Remplazar el proveedor en los Productos y Tours";
}

<h1>Remplazar el proveedor en los Productos y Tours</h1>
<br />
<h3>Para borrar el proveedor se debe remplazar en los productos y tours asociados.</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Replace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cedula" class="control-label">Cédula:</label>
                <input asp-for="cedula" class="form-control" readonly />
                <span asp-validation-for="cedula" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="descripcion" class="control-label">Descripción:</label>
                <input asp-for="descripcion" class="form-control" readonly />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="proveedor" class="control-label">Seleccionar el nuevo Proveedor:</label>
                <select asp-for="@Model.proveedor" class="form-select" asp-items="@(new SelectList(ViewBag.pro,"cedula","descripcion"))"></select>
            </div>
            <br />
            
            <div class="form-group">
                <input type="submit" value="Reeplazar y Borrar" class="btn btn-primary" />             
            </div>
        </form>
    </div>
</div>
<br />
<br />
<br />
<div>
    <a asp-action="List">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
