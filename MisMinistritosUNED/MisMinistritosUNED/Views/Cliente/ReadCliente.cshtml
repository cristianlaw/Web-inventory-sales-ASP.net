@model MisMinistritosUNED.Models.ClienteModel

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h1>Detalles del Cliente</h1>
@if (TempData["clientecreado"] != null)
{
    <p style="color:darkorange" ;>@TempData["clientecreado"]</p>
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="control-label">Cédula:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cedula)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Nombre:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreCompleto)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Fecha de nacimiento:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Teléfono:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefono)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Profesión:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.profesion)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Correo:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.correoElectronico)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Esperiencia:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.comboReferencia)
        </dd>
        <dt class="col-sm-2">
            <label class="control-label">Contraseña:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.contrasena)
        </dd>
    </dl>
    <hr />
</div>
<div>
    <a asp-action="ReadCliente" asp-controller="Cliente" asp-route-cedula="@Model.cedula" class="text-dark fw-bold">Detalles del Cliente</a>
    <br />
    <a asp-action="IrActualizar" asp-controller="Cliente" asp-route-cedula="@Model.cedula" class="text-dark fw-bold">Actualizar Cliente</a>
    <br />
    <a asp-action="IrBorrar" asp-controller="Cliente" asp-route-cedula="@Model.cedula" class="text-dark fw-bold">Borrar Cliente</a>
    <br />
    <br />
    <a asp-action="CreateCliente" asp-controller="Cliente" asp-route-cedula="@Model.cedula" >Crear una Cuenta</a>
    <br />
    <a asp-action="Login" asp-controller="Login" asp-route-cedula="@Model.cedula">Volver al Login</a>
    <br />
</div>

<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>
