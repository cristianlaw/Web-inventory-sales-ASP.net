@model MisMinistritosUNED.Models.ClienteModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.0-beta2/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>

<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <h2 class="text-center text-dark mt-5">MIS MINISTRITOS CR</h2>
                        <div class="text-center mb-5 text-dark">
                            Tours acuáticos en Guanacaste
                        </div>
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center" style="background-color: #F0F0F0;">
                                <h3 class="mb-5">Acceder</h3>
                                <div class="text-center" style="color:red;">@ViewBag.message</div>

                                <div class="text-center mb-3 text-dark">
                                    <!--Ingreso de la cédula-->
                                    @Html.TextBoxFor(m => m.cedula, new {@class = "text-center form-control", @placeholder="Cédula formato 0#-####-####", @required = true })
                                    <span asp-validation-for="cedula" class="text-danger"></span>
                                </div>

                                <div class="text-center mb-3 text-dark">
                                    <!--Ingreso de la contraseña -->
                                    @Html.PasswordFor(m => m.contrasena, new { @class = "text-center form-control", @placeholder="Contraseña", @required = true })
                                </div>
                                <div class="text-center">
                                    <!--Botón Ingresa-->
                                    <button type="submit" class="btn btn-primary btn-block px-3 mb-3 w-100">Ingresar</button>
                                </div>
                                <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                                    <!--Ir a registrar el cliente -->
                                    ¿Desea resgistrarse? <a asp-area="" asp-controller="Cliente" asp-action="CreateCliente" class="text-dark fw-bold">Crear una Cuenta </a>
                                </div>

                                <div class="text-center mb-6" style="color:Gray">
                                    Administrador: 1-1111-1111 /
                                    Contraseña: 123
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>

<script>
    var mensaje = '@TempData["clienteborrado"]';
    if (mensaje.length) {
        alert(mensaje);
    }
</script>
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>


</html>

